{extends file="base.tpl"}{block name="content"}		<div class="layer-right-block-options-content">				<div class="layer-right-block-map ">			{if ($has_map)}			<div class="map" id="map-container">								<div id="category-map-canvas" class="map-canvas"></div>								<style>					#adv-add-map-canvas {						height: 400px;					}				</style>				<script>									var map;										var markers = {$map_markers};										var userLocation = {						'latitude' : {$location.latitude},						'longitude' : {$location.longitude}					};								var infoWindowContent = [];										function initialize() {						var mapOptions = {							zoom: 10,							center: new google.maps.LatLng(userLocation.latitude, userLocation.longitude),							mapTypeId: google.maps.MapTypeId.ROADMAP						};						map = new google.maps.Map(document.getElementById('category-map-canvas'),						  mapOptions);						  												for (i = 0; i < markers.length; i++) {							var latLng = new google.maps.LatLng(markers[i].map[0], markers[i].map[1]);							var marker = new google.maps.Marker({								position: latLng,								map: map,								title: markers[i].title,								icon: __markerIcon							});														var contentString = tmpl($('#t-marker').html(), { title: markers[i].title, description: markers[i].description, t: markers[i].table_id, r: markers[i].record_id });														infoWindowContent[i] = contentString;														var infoWindow = new google.maps.InfoWindow({								  content: contentString							  });														 google.maps.event.addListener(marker, 'click', (function(marker, i) {								return function() {									infoWindow.setContent(infoWindowContent[i]);									infoWindow.open(map, marker);								}							})(marker, i));						}											}					google.maps.event.addDomListener(window, 'load', initialize);				</script>							</div>			<div class="p-relative">				<div class="button-toggle-map c-pointer p-absolute" onclick="mapToggle(this);return false;" >					<span class="tx-white a-none-underline">развернуть</span>					<span class="tx-white a-none-underline hide">свернуть</span>				</div>			</div>			{/if}		</div>				{if (count($tree_items))}		{foreach from=$tree_items item=t}			<div class="category-main-item left">				<div class="category-main-item-title"><a href="{$app_url}/category/{$items[$t.id].r_id}">{$items[$t.id].categoryItemTitle}</a></div>				{if (isset($t.items))}				<div class="category-main-item-childs">					{foreach from=$t.items item=t2}					<div class="category-item-child">						<a href="{$app_url}/category/{$items[$t2.id].r_id}">{$items[$t2.id].categoryItemTitle}</a>					</div>					{/foreach}				</div>				{/if}			</div>		{/foreach}		{/if}		<div class="clear"></div>				{if count($advertisements)}			<div class="category-all-adv-block">			<div class="category-all-adv-block-title">Advertisements</div>						{foreach from=$advertisements item=adv}				<div class="layer-person-resume tx-margin-bottom-20px">					<div class="advertisement-list-item {if ($adv->premium)}layer-person-elemet-premium{/if}">						<div class="layer-perosn-info">							{if $adv->premium}							<div class="layer-premium-button right"><span class="tx-white"><i>Premium</i></span></div>							{/if}							{if $adv->quickly}							<div class="layer-fast-button right"><span class="tx-white"><i>Срочно</i></span></div>							{/if}							<div class="layer-last-days-search-page right tx-margin-right-15px"><span>истекает через {$adv->timeLeft} дня!</span></div>							<div class="layer-breadcumb tx-green-light">								<ul>									<li class="layer-bredcumbs-links"><a class="tx-green-light tx-margin-right-5px" href="#">Категории </a><span class="tx-margin-right-5px">&raquo;</span></li>									{foreach from=$adv->categoryPath item=p name=categoryPathF}									<li class="layer-bredcumbs-links"><a class="tx-green-light tx-margin-right-5px" href="{$app_url}/category/{$p['r_id']}">{$p['title']}</a> {if (!$smarty.foreach.categoryPathF.last)} <span class="tx-margin-right-5px">&raquo;</span>{/if}</li>									{/foreach}								</ul>							</div>								<div class="clear"></div>							<div class="layer-article-text">								<div class="layer-personal-text">									<div class="layer-person-info-firstline">										<div class="layer-personal-text-title">																						<div class="left p-relative">												<div class=" a-none-underline tx-margin-right-15px tx-green-light left tx-margin-top-6px tx-margin-right-60px"><span>{$adv->country}, {$adv->city}</span></div>													{if ($adv->hasMap)}												<div class="sprite layer-image-point-icon left c-pointer  tx-margin-top-6px layer-city-challenge"></div>												<div class="left a-underline tx-margin-right-10px tx-margin-top-15px"><span class="show-on-map c-pointer" data-map="{$adv->map}">на карте</span></div>												{/if}												{if ($adv->fromNewspaper)}												<div class="tx-grey  layer-yellow-button-magazine left tx-margin-right-10px  tx-14 tx-margin-top-10px"><b>Газета</b></div>												{/if}												{if ($adv->hasPrice)}												<div class="tx-green-light  layer-yellow-button-cash left tx-14 tx-margin-top-10px"><b>{$adv->price} {$adv->currency}</b></div>												{/if}																							</div>												<div class="clear"></div>										</div>										<div class="a-underline tx-14 advertisement-list-title"><a href="{$adv->url}"><b>{$adv->title}</b></a></div>										<div class="layer-article-content-search tx-margin-bottom-20px p-relative">											<div class="layer-article-content-search-txt">												<span>{$adv->description}</span>											</div>											<!--slider-->											<div class="slider-block-adv p-absolute">												<div class="right p-relative">																						<div class="layer-voice-image-search-page right p-relative">															<div class="{if (!$adv->hasImages)}view-photo-apparate-icon-alignment-advanced{/if} p-absolute">																{if (!$adv->hasImages)}																<div class="sprite view-photo-apparate-icon"></div>																<div class="layer-view-title-for-photo tx-margin-top-10px tx-margin-left-5px">Без фото</div>																{else}																<div class="advertisement-list-item-image">																	{if (isset($adv->images[0]))}<img src="{$public_url}/advertisement/images/{$adv->images[0]['image']}" />{/if}																</div>																{/if}															</div>														</div>														{if ($adv->hasAdditionalInfo)}													<div class="arrow-slider-serach-icon p-absolute c-pointer">														<div class="arrow-slider-left-position">															<div class="sprite arrow-slider-left-icon"></div>														</div>														</div>													<div class="slider-search-block p-absolute c-pointer">														<div class="blue-close p-absolute left">															<div class="blue-close-icon-position">																<div class="sprite blue-close-arrow-icon"></div>															</div>															</div>														<div class="slider-search-content">															<div>																{foreach from=$adv->additionalInfo item=info}																<div class="layer-second-row-slider-menu tx-line-height-20px">																	<div class="layer-element-left left"><span>{$info['message']}:</span></div>																	<div class="layer-element-right right tx-green-light"><span>{$info['value']}</span></div>																</div>																<div class="clear"></div>																<div class="yellow-horizontal-line"></div>																{/foreach}																															</div>														</div>													</div>													{/if}												</div>												</div>													<!--slider-->										</div>										<div class="layer-person-info-secondline">											<div class="sprite layer-person-info-editb-icon left"></div>											<div class="left tx-margin-top-6px"><span>Опубликовано: {$adv->published}</span></div>											<div class="clear"></div>										</div>									</div>								</div>							</div>						</div>															<div class="clear"></div>					</div>					<div class="clear"></div>				</div>				{/foreach}						</div>			{if ($pagesCount > 1)}			<div class="layer-left-block-search-navigation">				<div class="layer-left-block-search-navigation-prev left c-pointer">					<a href="{$app_url}/category/{$categoryId}/page/0"><div class="sprite layer-left-block-search-navigation-prev-img"></div></a>				</div>				<div class="layer-left-block-search-navigation-pages left">					<div class="search-navigation-pages-left left c-pointer">						<a href="{$app_url}/category/{$categoryId}/page/{if ($currentPage - 1 >= 0)}{($currentPage - 1)}{else}0{/if}"><div class="sprite search-navigation-pages-left-img"></div></a>					</div>					<div class="search-navigation-pages-numbers  left">						{section name=categoryPaginator loop=$pagesCount step=1 start=0}						<span><a class="search-navigation-pages-numbers-list {if ($smarty.section.categoryPaginator.index == $currentPage)}search-navigation-pages-numbers-list-active{/if} " href="{$app_url}/category/{$categoryId}/page/{$smarty.section.categoryPaginator.index}">{($smarty.section.categoryPaginator.index + 1)}</a></span>						{/section}					</div>					<div class="search-navigation-pages-right  left c-pointer">						<a href="{$app_url}/category/{$categoryId}/page/{if ($currentPage + 1 < $pagesCount)}{($currentPage + 1)}{else}0{/if}"><div class="sprite search-navigation-pages-right-img"></div></a>					</div>					<div class="clear"></div>				</div>				<div class="layer-left-block-search-navigation-next left c-pointer">					<a href="{$app_url}/category/{$categoryId}/page/{($pagesCount - 1)}"><div class="sprite layer-left-block-search-navigation-next-img"></div></a>				</div>			</div>			<div class="clear"></div>			{/if}		{/if}			</div>	{/block}