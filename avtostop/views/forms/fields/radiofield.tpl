<div class="afc-field-container radio-field">	<div class="afc-field-label">{$title}: {if $required == 1}<span class="field-required">*</span>{/if}</div>	<div class="afc-field-input afc-field-own">		<div class="radio-button-container" id="radio-{$id}" data-name="{$name}" >			{foreach from=$options item=v key=k}				<div class="afc-radio-container radio-button-item-container" data-value="{$k}" >					<div class="div left radio-button-own">						{if isset($value) && ($value == $k)}						<div class="sprite radio-sprite radio-checked-sprite"><inpu type="hidden" name="{$name}" value="{$k}" /></div>						{else}						<div class="sprite radio-sprite"></div>						{/if}					</div>					<div class="left radio-button-title">						<span>{$v}</span>					</div>					<div class="clear"></div>				</div>			{/foreach}		</div>	</div></div><script>	new RadioController('#radio-{$id}');</script>