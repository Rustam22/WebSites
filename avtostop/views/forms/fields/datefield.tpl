<link rel="stylesheet" type="text/css" href="{$static_url}/stylesheets/datepicker.css" /><script src="{$static_url}/javascripts/datepicker.js"></script><div class="afc-field-container date-field">	<div class="afc-field-label">{$title}: {if $required == 1}<span class="field-required">*</span>{/if}</div>	<div class="afc-field-input afc-field-own">		<input type="text" id="date-{$id}" name="{$name}" {if isset($value)}value="{$value}"{/if} />	</div></div><script>	var el = '#date-{$id}';	$(el).DatePicker({				format: 'Y-m-d',		date: $(el).val(),		onChange: function(formated, dates){			if ($(arguments[3]).parents('.datepickerDays').length) {				$(el).val(formated);				$(el).DatePickerHide();			}		}	});</script>